@model IEnumerable<ToDoList.Models.DoList>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Assigned Tasks</h1>
<div class="d-flex justify-content-center">
    <p class="text-center btn btn-outline-primary">
        <a asp-action="Create">Add New Task</a>
    </p>
</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <button class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</button>
                <button class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
